{
  "name": "@ii-coop/ox-ghost",
  "version": "1.0.0",
  "description": "Org-mode to Ghost CMS: export, validate, and publish",
  "main": "ox-ghost-render.js",
  "bin": {
    "ox-ghost-render": "./ox-ghost-render.js",
    "ghost": "./ghost.js"
  },
  "scripts": {
    "validate": "node ox-ghost-render.js",
    "test": "mocha 'test/**/*.test.js' --timeout 30000",
    "test:minimal": "mocha 'test/all-nodes.test.js' --timeout 30000",
    "test:style": "mocha 'test/style-test.test.js' --timeout 30000",
    "test:watch": "mocha 'test/**/*.test.js' --timeout 30000 --watch",
    "test:coverage": "c8 mocha 'test/**/*.test.js' --timeout 30000",
    "demo": "node ox-ghost-render.js demo/test-minimal.org --html demo/test-minimal.html"
  },
  "keywords": [
    "org-mode",
    "ghost",
    "lexical",
    "emacs",
    "export",
    "publish",
    "cms"
  ],
  "author": "ii.coop",
  "license": "MIT",
  "dependencies": {
    "@tryghost/kg-lexical-html-renderer": "^1.3.31",
    "@tryghost/kg-default-nodes": "^2.0.8",
    "@tryghost/admin-api": "^1.14.3",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ii/ox-ghost"
  },
  "devDependencies": {
    "mocha": "^10.2.0",
    "chai": "^4.3.7",
    "c8": "^8.0.0"
  }
}
